@*@model UsuarioModel*@
@model List<Reclutador>
@{
    ViewData["Title"] = "Listar"; 
    Layout = "~/Views/Shared/_LayoutLog.cshtml";
}
<div class="container">
    <main role="main">
        <div class="container">
            <br>
            <div class="row text-center">
                <h1>Reclutador</h1>
            </div>
            <br>
            <div class="row">
                <div class="col-6">
                    <form asp-action="Buscar" asp-controller="Reclutador" method="post">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" aria-label="Nombre del Reclutador:"
                                aria-describedby="button-addon2" placeholder="Nombre del Reclutador: " name="busca">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Buscar</button>
                        </div>
                    </form>
                </div>
                <div class="col-3 ">
                    <a asp-action="Actualizar" asp-controller="Reclutador" class="btn btn-Warning">
                        Actualizar
                    </a>
                </div>
                <div class="col-3">
                    <a asp-action="Guardar" asp-controller="Reclutador" class="btn btn-success">
                        Nuevo
                    </a>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <!--<th scope="col">#</th>-->
                                <th scope="col">Nombre</th>
                                <th scope="col">Hab/Desab</th>
                                <th scope="col">Telefonos</th>
                                <th scope="col"></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<th scope="row">@item.ClaveReclutador</th>*@
                                    <td>@item.Nombre</td>
                                    <td>
                                        <input class="form-check-input" type="checkbox"
                                               id="activoCheckbox-@item.ClaveReclutador" name="activoCheckbox"
                                        @(item.Activo.GetValueOrDefault() ? "checked" : "")>

                                    </td>
                                    <td>@item.Telefono<br>@item.Telefonodos</td>
                                    <td>
                                        <a asp-action="Editar" asp-controller="Reclutador" class="btn btn-primary btn-sm" asp-route-ClaveReclutador="@item.ClaveReclutador" asp-route-user="@item.user" asp-route-contra="@item.contra">Editar</a>
                                    </td>
                                </tr>
                            }
                            @*@foreach (var item in Model.recluta)
                            {
                                <tr>
                                    <th scope="row">@item.ClaveReclutador</th>
                                    <td>@item.Nombre</td>
