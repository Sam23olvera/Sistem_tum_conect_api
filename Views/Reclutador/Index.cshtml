                                        <input class="form-check-input" type="checkbox"
                                            id="activoCheckbox-@item.ClaveReclutador" name="activoCheckbox"
                                        @(item.Activo.GetValueOrDefault() ? "checked" : "")>

                                    </td>
                                    <td>@item.Telefono<br>@item.Telefonodos</td>
                                    <td>
                                        <a asp-action="Editar" asp-controller="Reclutador" asp-route-ClaveReclutador="@item.ClaveReclutador" >Editar</a>
                                        <a asp-action="Editar" asp-controller="Reclutador" class="btn btn-primary btn-sm" asp-route-ClaveReclutador=\"@item.ClaveReclutador" asp-route-cveEmp=\"@Model.Data[0].EmpS[0].cveEmp" asp-route-usuario="@Model.Data[0].usuario" asp-route-contraseña="@Model.Data[0].contraseña">Editar</a>
                                    </td>
                                </tr>
                            }*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>