<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/imag/logo_difuminado.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ControlRep.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MenuSpiner2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConectDB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    

</head>
@(await Component.InvokeAsync("Menu", ViewData["UsuarioModel"]))
@{
    string? title = ViewData["Title"] as string;
    var usuarioModel = ViewData["UsuarioModel"] as UsuarioModel;
}
<body>
    <main role="main">
        <div class="container-fluid">
            <div class="row text-center">
                <div id="loading-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 9999; text-align: center; color: white; padding-top: 20%;">
                    <h3>Cargando...</h3>
                    <div class="spinner-border text-light" role="status">
                        <span class="sr-only"></span>
                    </div>
                </div>
                <input type="hidden" value="@TempData["Mensaje"]" id="mensaje" />
                <input type="hidden" value="@TempData["guardado"]" id="guarda" />
                <input type="hidden" value="@usuarioModel.Data[0].idus" id="IdUSER" />
                <input type="hidden" value="" id="ticket" />
            </div>
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="js/controlRep.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
