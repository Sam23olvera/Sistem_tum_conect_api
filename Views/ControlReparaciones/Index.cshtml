@using ConectDB.Models;
@model ControlFalla;
@{
    string? title = ViewData["Title"] as string;
    Layout = "~/Views/Shared/_Layout_ControlReparaciones.cshtml";
    var usuarioModel = ViewData["UsuarioModel"] as UsuarioModel;
}
<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-md-2">
            <ul class="nav flex-column border tamancla">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="ControlReparaciones" asp-route-XT="@usuarioModel.Token" asp-route-cveEmp="@usuarioModel.Data[0].EmpS[0].cveEmp" asp-route-idsub="@usuarioModel.idsub" class="nav-link activo carga">Inicio</a>
                </li>
                <li class="nav-item">
                    <a asp-action="PorAsig" asp-controller="ControlReparaciones" asp-route-XT="@usuarioModel.Token" asp-route-cveEmp="@usuarioModel.Data[0].EmpS[0].cveEmp" asp-route-idsub="@usuarioModel.idsub" class="nav-link seccion carga">Por Asignar</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Asignacion" asp-controller="ControlReparaciones" asp-route-XT="@usuarioModel.Token" asp-route-cveEmp="@usuarioModel.Data[0].EmpS[0].cveEmp" asp-route-idsub="@usuarioModel.idsub" class="nav-link seccion carga">Asignados</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Repara" asp-controller="ControlReparaciones" asp-route-XT="@usuarioModel.Token" asp-route-cveEmp="@usuarioModel.Data[0].EmpS[0].cveEmp" asp-route-idsub="@usuarioModel.idsub" class="nav-link seccion carga">En Reparación</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Fin" asp-controller="ControlReparaciones" asp-route-XT="@usuarioModel.Token" asp-route-cveEmp="@usuarioModel.Data[0].EmpS[0].cveEmp" asp-route-idsub="@usuarioModel.idsub" class="nav-link seccion carga">Finalizado</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Consul" asp-controller="ControlReparaciones" asp-route-XT="@usuarioModel.Token" asp-route-cveEmp="@usuarioModel.Data[0].EmpS[0].cveEmp" asp-route-idsub="@usuarioModel.idsub" class="nav-link seccion carga">Consulta</a>
                </li>
            </ul>
        </div>
        <div class="col-md-10">
            <div class="container">
                <div class="row justify-content-center">
                    <h2 class="letras-index">Resumen del Mes en Curso</h2>
                </div>
                <br />
                <div class="row justify-content-center">
                    @foreach (var k in Model.SolicitudesGenerales)
                    {
                        @if (k.Descripcion == "Total General")
                        {
                            <div class="col-md-3">
                                <div class="card" style="background-color: #82E0AA; width: 13rem;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@k.Descripcion</h5>
                                        <h4 class="card-text text-center">@k.Cantidad </h4>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (k.Descripcion == "Total_Unidad")
                        {
                            <div class="col-md-3">
                                <div class="card" style="background-color: #F0B27A; width: 13rem;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@k.Descripcion</h5>
                                        <h4 class="card-text text-center">@k.Cantidad </h4>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (k.Descripcion == "Total_Remolque")
                        {
                            <div class="col-md-3">
                                <div class="card" style="background-color: #2E86C1; width: 13rem;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@k.Descripcion</h5>
                                        <h4 class="card-text text-center">@k.Cantidad </h4>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (k.Descripcion == "Total_Dolly")
                        {
                            <div class="col-md-3">
                                <div class="card" style="background-color: #DAF7A6; width: 13rem;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@k.Descripcion</h5>
                                        <h4 class="card-text text-center">@k.Cantidad </h4>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <br />
                <div class="row justify-content-between">
                    <h5 class="text-start letras-index">Unidad</h5>
                    @foreach (var s in Model.Solicitudes)
                    {
                        @if (s.ClaveEstatus == 1 && s.ClaveTipoTicket == 1)
                        {
                            <div class="col-md-2">
                                <div class="card" style="background-color: #F1948A;width: 12rem;">
                                    <div class="card-body">
                                        <h7 class="card-title text-start">@s.Estatus</h7>
                                        <h4 class="card-text text-start">@s.Cantidad</h4>
